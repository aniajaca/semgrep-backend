{
  "semgrepBinary": "semgrep",
  "rulesPath": "./rules",
  "runCustomScanner": false,
  "semgrepConfig": {
    "useRegistry": true,
    "rulesets": [],
    "customRulesOnly": false,
    "severity": "ERROR,WARNING",
    "timeout": 30,
    "maxBytes": 1000000
  },
  "severityMap": {
    "ERROR": "HIGH",
    "WARNING": "MEDIUM",
    "INFO": "LOW",
    "INVENTORY": "LOW",
    "EXPERIMENTAL": "LOW"
  },
  "defaultContext": {
    "internetFacing": false,
    "production": false,
    "handlesPI": false,
    "exploitAvailable": false,
    "legacyCode": false,
    "businessCritical": false,
    "compliance": false,
    "thirdPartyIntegration": false,
    "complexAuth": false
  },
  "scanning": {
    "maxFilesPerScan": 1000,
    "maxFileSizeKB": 500,
    "excludePaths": [
      "node_modules",
      ".git",
      "dist",
      "build",
      "coverage",
      "test",
      "__tests__",
      ".vscode",
      ".idea"
    ],
    "includeExtensions": [
      ".js",
      ".jsx",
      ".ts",
      ".tsx",
      ".py",
      ".java"
    ]
  },
  "scoring": {
    "enableEnvironmentalFactors": true,
    "maxMultiplier": 2.0,
    "baseScoreMapping": {
      "sqlInjection": 9.0,
      "commandInjection": 9.0,
      "pathTraversal": 8.0,
      "xss": 6.5,
      "insecureDeserialization": 8.6,
      "hardcodedSecrets": 7.5,
      "weakCrypto": 5.3,
      "dangerousEval": 6.0,
      "ssrf": 7.5,
      "prototypePollution": 7.0,
      "insecureLogging": 4.0,
      "nosqlInjection": 8.5,
      "xxe": 7.5,
      "ldapInjection": 8.0
    }
  },
  "reporting": {
    "maxFindingsInSummary": 5,
    "includeSnippets": true,
    "includeRemediation": true,
    "outputFormats": ["json", "html", "pdf"]
  },
  "cache": {
    "enabled": true,
    "ttlSeconds": 300,
    "maxSize": 100
  }
}